const raspi = require('raspi');
const Serial = require('raspi-serial').Serial;

raspi.init(() => {
  var serial = new Serial();
  serial.open(async () => {
    var str = "";
    await serial.on('data', (data) => {
      str += data.toString();
    });
    return str;
  }).then((value) => {process.stdout.write(value)});
});


